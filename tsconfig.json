{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "target": "ESNext",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./env.d.ts"
  ],
  "exclude": ["/node_modules/"]
}
